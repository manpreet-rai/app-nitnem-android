<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SundarGutkaActivity"
    android:id="@+id/sundarGutkaDrawer"
    android:background="?mcolorPrimary"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?mcolorPrimary">

        <com.google.android.material.appbar.AppBarLayout android:minWidth="0dp" android:minHeight="0dp"
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="?mcolorPrimary">

            <androidx.appcompat.widget.Toolbar android:minHeight="0dp" android:minWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="?mcolorPrimary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:tint="@color/back_button_color"
                        android:src="@drawable/ic_back_button"
                        android:background="@null"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="jpujI swihb"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:fontFamily="@font/gurbaniakharheavy"
                        android:textSize="20dp"
                        android:textColor="?mblack"/>

                    <ImageButton
                        android:id="@+id/sundarGuktaGoToBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:tint="@color/back_button_color"
                        android:src="@drawable/ic_jump_button"
                        android:background="@null"
                        android:scaleX="0.56"
                        android:scaleY="0.56"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/settingsBtn" />
                    <ImageButton
                        android:id="@+id/settingsBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:tint="@color/back_button_color"
                        android:src="@drawable/ic_menu_button"
                        android:background="@null"
                        android:scaleX="0.56"
                        android:scaleY="0.56"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gurbaniScreenRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="100"
            android:background="?mcolorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <RelativeLayout
                android:id="@+id/settingsViewHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
                <RelativeLayout
                    android:id="@+id/settingsAreaView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="16dp"
                    android:background="?mcolorPrimary"
                    android:elevation="5dp"
                    android:clickable="true"
                    android:visibility="invisible">
                    <ImageButton
                        android:id="@+id/closeSettingsViewBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:tint="@color/back_button_color"
                        android:src="@drawable/ic_close_button"
                        android:background="@null"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:layout_toRightOf="@id/closeSettingsViewBtn"
                        android:layout_alignTop="@id/closeSettingsViewBtn"
                        android:layout_alignBottom="@id/closeSettingsViewBtn"
                        android:gravity="center_vertical"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="?mblack"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"/>
                    <RelativeLayout
                        android:id="@+id/themeMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/closeSettingsViewBtn"
                        android:layout_marginTop="16dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/themeHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Background"
                            android:textSize="16dp"
                            android:padding="4dp"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="?mblack" />
                        <LinearLayout
                            android:id="@+id/themeBtnsMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/themeHeading">
                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/lightThemeBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Light"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginRight="4dp"/>
                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/darkThemeBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Dark"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fontTypeMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/themeMenu"
                        android:layout_marginTop="16dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/fontStyleHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Font Style"
                            android:textSize="16dp"
                            android:padding="4dp"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="?mblack" />
                        <LinearLayout
                            android:id="@+id/fontStyleBtnsMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fontStyleHeading">
                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/slimFontStyleBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Slim"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginRight="2dp"/>
                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/regularFontStyleBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Regular"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"/>

                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/mediumFontStyleBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Medium"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"/>
                            <Button android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/boldFontStyleBtn"
                                android:layout_width="0dp"
                                android:layout_height="64dp"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:text="Bold"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensanssemibold"
                                android:textSize="16dp"
                                android:textColor="?mthemedText"
                                android:background="@drawable/settings_button_background"
                                android:padding="4dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fontSizeMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fontTypeMenu"
                        android:layout_marginTop="16dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/fontHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Font Size"
                            android:textSize="16dp"
                            android:padding="4dp"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="?mblack" />
                        <LinearLayout android:minHeight="24dp"
                            android:id="@+id/fontSizeBtnsMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fontHeading"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:text="Size"
                                android:textSize="18dp"
                                android:fontFamily="@font/opensanssemibold"
                                android:textColor="?mthemedText"
                                android:gravity="center"/>
                            <SeekBar
                                android:id="@+id/fontSizeSeekBar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/fontSizeSeekBarProgress"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.15"
                                android:text="19"
                                android:textSize="18dp"
                                android:fontFamily="@font/opensanssemibold"
                                android:textColor="?mthemedText"
                                android:gravity="center"/>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?mcolorPrimary"
        android:layout_gravity="end">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/gotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Access"
                android:textSize="20dp"
                android:textColor="?mthemedText"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="12dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gotoRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:background="?mcolorPrimary"
                android:layout_below="@id/gotoLabel">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>